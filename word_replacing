#A python code for replacing words in a line

def word_replacing():
  
  a_str = "Hello, My name is Alve. Hello Hello Hello Hello Hello"
  print(a_str + "   ") #The space in the inverted comma not required, it just makes the output beautiful.
  
  Word_to_replce = input("Enter the word you want to replace: ")

  New_word = input ("Enter the new word you want as a replacement: ")

  print("  ") #This line is not required, just adding space to make the output look beutiful
  
  print (a_str.replace(Word_to_replce, New_word))

word_replacing()
